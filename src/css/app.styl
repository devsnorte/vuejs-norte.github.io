// app global css
@import url('https://fonts.googleapis.com/css?family=Ubuntu&display=swap');

* {
  font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

a {
  color: #3eaf7c;
  font-weight: 500;
  text-decoration: none;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

ol, p, ul, a {
  line-height: 1.7;
  font-size: 1.2em;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.title {
  font-size: 4em;
  font-weight: 600;
  line-height: 1.25;
  color: #2c3e50;
}

.subtitle {
  max-width: 20em;
  font-size: 2em;
  line-height: 1.3;
  color: #6a8bad;
}

.content {
  max-width: 740px;
  margin: 0 auto;
  padding: 2rem 2.5rem;
}

.q-page {
  padding-left: 5px;
  padding-right: 5px;
  padding-top: 0.2em;
}
